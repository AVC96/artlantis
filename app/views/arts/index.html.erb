<div class="banner d-flex justify-content-center flex-column">
  <div class="container justify-content-center d-flex flex-column text-center">
    <%= image_tag "background.jpeg", alt: "Le Wagon", class:"rounded mx-auto d-block img-fluid w-80" %>
    <div class="title_box">
      <h1>Artlantis | Digital Art Platform</h1>
    </div>
    <div class="art-container">
      <div class="row">
        <% @arts.each do |art| %>
          <div class="col-4">
            <div class="m-3">
              <%= link_to art_path(art) do %>
                <%= cl_image_tag art.images[0].key, class: 'card-artwork p-3 bg-light'%>
              <% end %>
              <div class="art_text">
                <span><%= art.name%></span>
                <span>Â£<%= art.cost%></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
