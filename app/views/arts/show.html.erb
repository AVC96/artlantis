<div class="title_box text-center" >
  <h1>Artlantis</h1>
</div>
<div class="show-container">
  <%= cl_image_tag @art.images[0].key, height: 600 %>
  <div class="artcard-details">
    <div class="artist-details">
      <h3><%= @art.name %> | <%= link_to @artist.name, artist_path(@artist)%></h3>
    </div>
    <div class="art-show-description">
      <p><%= @art.description %></p>
      <p><%= @art.category %></p>
      <div class= "icon_fav">
        <a href="Favourites index" target="_blank">
          <i class= "fas fa-hand-holding-heart fa-3x"></i>
        </a>
      </div>
    </div>
    <div class="bid-area">
      <div class="bid-text">
        <p>Open price: Â£ <%= @art.cost %></p>
        <p>Closing date: <%= @art.auction_end_time.strftime("%m/%d/%Y") %>
        <p>Location: <%= @art.location %></p>
      </div>
      <div class= "btn-container">
        <%= simple_form_for([@art, @bid]) do |f| %>
          <%= f.input :price, placeholder: "enter your bid", label: false %>
          <%= f.submit "Make a bid", class: "btn btn-light" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="other_artworks">
  <h2> See similar artworks </h2>
  <div class= "card-holder">
    <% @sim_art_category.each do |art| %>
      <%= link_to art_path(art) do %>
        <%= cl_image_tag art.images[0].key, class: "w-100 similar_artwork_image" %>
      <% end %>
    <% end %>
  </div>
</div>
