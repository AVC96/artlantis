<div class="banner d-flex justify-content-center flex-column">
  <div class="container justify-content-center d-flex flex-column text-center">
    <%= image_tag "background.jpeg", alt: "Le Wagon", class:"rounded mx-auto d-block img-fluid w-80" %>
    <div class="title_box text-center" >
      <h1>Artlantis</h1>
    </div>

    <div class="show-container">
      <%= cl_image_tag @art.images[0].key %>

      <div class="artcard-details">
        <div class="artist-details">
          <h3><%= @art.name %> | <%= link_to @artist.name, artist_path(@artist)%></h3>
        </div>

        <div class="art-show-description">
          <p><%= @art.description %></p>
          <p><%= @art.category %></p>
        </div>

        <div class="bid-area">
          <div class="bid-text">
            <p>Open price: Â£ <%= @art.cost %></p>
            <p>Closing date: </p>
            <p>Location: <%= @art.location %></p>
          </div>
          <div>
           <a class="button"> Make a bid </a>
          </div>
        </div>
      </div>
      <%# </div> %>
    </div>
  </div>
</div>
