<div class="banner d-flex justify-content-center flex-column">
  <div class="container justify-content-center d-flex flex-column text-center">
    <div class="title_box">
      <h1>Artlantis | Artworks</h1>
    </div>
    <div class= "white_container">
      <% @favourites.each do |favourite| %>
        <div class="card-product">
          <%= link_to art_path(favourite.art) do %>
            <%= cl_image_tag favourite.art.images[0].key %>
          <% end %>
          <div class="card-product-infos">
            <h2><%= favourite.art.name %></h2>
            <p><strong>Location:</strong> <%= favourite.art.location %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
